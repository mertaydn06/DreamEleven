@model DreamEleven.Entities.Comment

@{
    ViewData["Title"] = "Yorumu Düzenle";
    ViewData["NoContainer"] = true;
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div style="background: rgba(0,0,0,0.8); padding: 40px; border-radius: 15px; width: 500px; color: white;">

        <h2 class="text-center mb-4">Yorumu Güncelle</h2>

        <form method="post">

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TeamId" />

            <div class="mb-3">
                <label asp-for="Content" class="form-label"></label>
                <textarea asp-for="Content" class="form-control" rows="5" placeholder="Yorumunuzu girin..."></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Kaydet</button>
        </form>

        <div class="text-center mt-3">
            <a asp-controller="Team" asp-action="Details" asp-route-id="@Model.TeamId"
                class="btn btn-link text-light">İptal</a>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
